.cards {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;

  align-items: stretch;
  clear: both;

}

.card {
  $base-border-color: transparentize($fore, .1) !default;
  $base-border-radius: 2px !default;
  $base-background-color: $background !default;
  $base-spacing: 1.5em !default;
  $base-font-color: $fore !default;
  $card-border-color: $base-border-color;
  $card-border: 3px solid $card-border-color;
  $card-background: $base-background-color;
  $card-header-background: $card-background;
  $card-margin: 1em;

  background-color: $card-background;
  border: $card-border;
  border-radius: $base-border-radius;
  box-shadow: 0 2px 4px darken($base-background-color, 10%);
  flex-basis: 15em;
  flex-grow: 1;
  margin: 0 $card-margin $base-spacing $card-margin;
  position: relative;
  transition: all 0.2s ease-in-out;
  color: $base-font-color;




  .card-image {
    background-color: $background;
    height: 100px;
    max-height: 100px;
    overflow: hidden;

    img {
      @include border-top-radius($base-border-radius);
      opacity: 1;
      transition: all 0.2s ease-in-out;
      width: 100%;
    }
  }

  .card-header {
    background-color: $card-header-background;
    border-bottom: 0;
    border-radius: $base-border-radius $base-border-radius 0 0;
    font-weight: bold;
    line-height: 1.5em;
    padding: ($base-spacing / 3) ($base-spacing / 2);
  }

  .card-copy {
    font-size: 0.9em;
    line-height: 1.5em;
    padding: ($base-spacing / 2) ($base-spacing / 2);



    p {

      margin: 0 0 ($base-spacing / 2);

    }
  }

  &:active {
    background-color: $card-background;

    .card-header {
      background-color: $card-background;
    }
  }
}


