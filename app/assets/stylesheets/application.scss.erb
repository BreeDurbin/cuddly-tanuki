  $flex-box-border: 0 solid $flex-box-border-color;
  $flex-box-background: $background;
  $flex-box-gutter: 0 0 1em 0;
  $flex-box-width: 20em;
  $flex-box-color: $base-font-color;
  $flex-box-top-colors: 
    $hover,
    $hover, 
    $hover,
    $hover, 
    $hover, 
    $hover, 
    $hover;

  @include clearfix;
  align-items: stretch;
  clear: both;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  text-align: center;



  .flex-box-2 {
    align-self: stretch;
    background: $flex-box-background;
    border-radius: $base-border-radius;
    box-shadow: inset 0 0 1px $flex-box-border-color, 0 2px 4px darken($base-background-color, 10%);
    display: block;
    flex: 2 2 15em;
    margin: $flex-box-gutter;
    padding: 2em 2em 3em 2em;
    text-decoration: none;
    transition: all 0.2s ease-in-out;

    @for $i from 1 to 7 { 
// assign colors from $flex-box-top-colors list
      &:nth-child(#{$i}) {
        $color-from-list: nth($flex-box-top-colors, $i);
        //border-top: 6px solid $color-from-list;
        
        &:focus,
        &:hover {
          background-color: darken($color-from-list, 10%);
        }
      }
    }

    img {
      display: block;
      height: 7em;
      margin: 0 auto 1em;
      opacity: 0.4;
    }

    .flex-title {
      color: $flex-box-color;
      font-size: 1.2em;
      margin-bottom: 0.5em;
      text-decoration: none;
    }

    p {
      color: $flex-box-color;
      line-height: 1.5em;
      margin: auto;
    }


  }



  .flex-box-big {
    flex: 1 1 40em;
  }
}

