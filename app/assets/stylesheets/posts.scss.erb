$fore: #ffb02d;
$hover: #2d7eff;
$background: #000000;
$border: #ffb02d;
$white: #FFFFFF;

//accordion---------------------------------------------------------------------------------------

.accordion {  
  $base-border-color: $fore !default;
  $base-line-height: 1.5em !default;
  $base-spacing: 1.5em !default;
  $dark-gray: #333 !default;
  $base-font-color: $white !default;
  $accordion-menu-border-color: $base-border-color;
  $accordion-menu-color: $base-font-color;
  $accordion-menu-border: .4em solid transparentize($accordion-menu-border-color, .5);
  $accordion-menu-background: $background;
  $accordion-menu-hover: $hover;
  $accordion-menu-sub-background: none;
  $accordion-menu-sub-inset: $accordion-menu-sub-background
  $accordion-menu-sub-hover: $hover;
  $accordion-menu-list-padding: ($base-spacing / 2) $gutter;
  
  background-color: $accordion-menu-background;
  border: $accordion-menu-border;
  margin: 0 0 $base-spacing 0;
  padding: 0;
  background-clip: content-box;

  ul {
    margin: 0;
    padding: 0;
  }

  li {
    border-bottom: $accordion-menu-border;
    list-style: none;

    > a {
      color: $accordion-menu-color;
      display: block;
      padding: $accordion-menu-list-padding;
      text-decoration: none;
    }

    &:last-child {
      border: none;
    }

    &:focus,
    &:hover {
      background-color: $accordion-menu-hover;
    }
  }

  ul.submenu {
    display: none;

    li {
      background-color: $accordion-menu-sub-background;

      &:first-child {
        border-top: $accordion-menu-border;
        box-shadow: none;
      }
      
      &:focus,
      &:hover {
        background-color: $accordion-menu-sub-hover;

      }
    }
  }

  .is-expanded {
    display: block;
    padding-bottom: 0;
  }
}