<%= form_for @post do |f| %>
	<% if @post.errors.any? %>
	<h2><%= pluralize(@post.errors.count, "error") %> Prevented this post from saving:</h2>
	<ul>
		<% @post.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
	<% end %>
	<div class="text-box">
		<%= f.label :title %><br>
		<%= f.text_field :title %><br>
		<br>
		<%= f.label :body %><br>
		<%= f.text_area :body %><br>
		<br>
	</div>
	<%= f.submit 'Post', class: "btn btn-warning" %>
<% end %>