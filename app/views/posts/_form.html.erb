<%= form_for @post do |f| %>
	<% if @post.errors.any? %>
	<h2><%= pluralize(@post.errors.count, "error") %> Prevented this post from saving:</h2>
	<ul>
		<% @post.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
	<% end %>
		<div class="flex-boxes">
			<a href="javascript:void(0)" class="flex-box flex-box-big">
				<%= f.label :title %><br>
				<%= f.text_field :title, :class => 'form-box' , :class => 'form-box'  %><br>
				<br>
				<%= f.label :body %><br>
				<%= f.text_area :body, :class => 'form-description-box'  %><br>
				<br>
			</a>
		</div>
	<%= f.submit 'Post', class: "btn btn-warning" %>
<% end %>