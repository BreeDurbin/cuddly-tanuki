<section>

	<h1><%= @fileupload.title  %></h1>

	<br><br>

	<%= @fileupload.description %>

	<br><br>

  <% unless @fileupload.code.url.nil? %>
	  <%= link_to "View source", @fileupload.code.url, class: "ui inverted violet button", download:true %>
  <% end %>


	<br><br>

	<% if user_signed_in? %>
		<%= link_to "Edit file", edit_fileupload_path(@fileupload), class: "ui inverted violet button" %>
		<%= link_to "Delete", fileupload_path(@fileupload), method: :delete, data: { confirm: "Are you sure you wish to delete this post?"}, class: "ui inverted violet button" %>
		<%= link_to "New Language ", languages_path(@languages), method: :create, class: "ui inverted violet button" %>

	<% end %>
	
</section>