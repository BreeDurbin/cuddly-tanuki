<div class="grid-items">
	<% @fileuploads.each do |fileupload| %>			
					<div class="grid-item">
          <a href="javascript:void(0)" >
          
					<h3 class="flex-title"><%= fileupload.section %></h3>
					<%= fileupload.title %>
					<%= fileupload.description %>
          <br>
          <br>
					<%= link_to "View source", fileupload.source_url.to_s, class: "btn btn-warning" %>
          </a>
          

          <% if user_signed_in? %>
            <%= link_to "Edit file", edit_fileupload_path(fileupload), class: "btn btn-warning" %>
            <%= link_to "Delete", fileupload_path(fileupload), method: :delete, data: { confirm: "Are you sure you wish to delete this post?"}, class: "btn btn-warning" %>
          <% end %>

          </div>

	<% end -%>
	<%= will_paginate @fileuploads %>
</div>




