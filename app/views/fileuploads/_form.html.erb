<%= form_for @fileupload, :html => {:multipart => true} do |f| %>

	<div class="text-box">
	<% if @fileupload.errors.any? %>
	<h2><%= pluralize(@fileupload.errors.count, "error") %> Prevented file from uploading:</h2>
	<ul>
		<% @fileupload.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
	<% end %>
	<%= f.label :section %><br>
	<%= f.text_field :section %><br>
	<br>
	<%= f.label :title %><br>
	<%= f.text_field :title %><br>
	<br>
	<%= f.label :description %><br>
	<%= f.text_area :description %><br>
	<br>
	<%= f.label :source %><br>
	<%= f.folder_field :source %><br>
	<br>
	<%= f.label :bin %><br>
	<%= f.file_field :bin %><br>
	<br>
	<%= f.submit 'Upload', class: "btn btn-warning" %>
	</div>
<% end %>