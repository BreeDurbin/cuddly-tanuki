<%= form_for @fileupload do |f| %>

	<% if @fileupload.errors.any? %>
	<h2><%= pluralize(@fileupload.errors.count, "error") %> Prevented file from uploading:</h2>
	<ul>
		<% @fileupload.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
	<% end %>

	<%= f.label :section %><br>
	<%= f.text_field :section %><br>
	<br>
	<%= f.label :title %><br>
	<%= f.text_field :title %><br>
	<br>
	<%= f.label :description %><br>
	<%= f.text_area :description %><br>
	<br>
	<%= f.label :source %><br>
	<%= f.text_area :source %><br>
	<br>
	<%= f.label :bin %><br>
	<%= f.text_area :bin %><br>
	<br>
	<%= f.submit %>
<% end %>