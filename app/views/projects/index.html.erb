<h1 class="text-box" align="center">My Projects.</h1> 

<% if user_signed_in? %>
	<%= link_to "New project", new_project_path(@project), class: "btn btn-warning" %>
<% end %>

<% @projects.each do |project| %>
		<div><%= project.section %></div>
		<br>
		<h2> <%= project.title %> </h2>
		<p> <%= project.created_at.strftime('%A, %B, %d') %></p>
		<br><br>
		<div><%= project.description %></div>
		<br>
		<div><%= project.source %></div>
		<br>
		<div><%= project.bin %></div>
		<br>
		<%= link_to "View full project.", project %>
		
		<% if user_signed_in? %>
		<%= link_to "Edit project", edit_project_path(project), class: "btn btn-warning" %>
		<%= link_to "Delete", project_path(project), method: :delete, data: { confirm: "Are you sure you wish to delete this post?"}, class: "btn btn-warning" %>
		<% end %>
<% end %>




<%= will_paginate @projects %>
